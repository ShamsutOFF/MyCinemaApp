<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/short_margin"
    android:layout_marginLeft="@dimen/short_margin"
    android:layout_marginEnd="@dimen/short_margin"
    android:orientation="vertical"
    tools:ignore="RtlHardcoded">

    <androidx.cardview.widget.CardView
        android:layout_width="100dp"
        android:layout_height="150dp"
        app:cardCornerRadius="7dp">

        <ImageView
            android:id="@+id/image_preview"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/description"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/short_margin"
        android:gravity="center"
        android:text="Мир дикого запада"
        android:textSize="@dimen/movie_item_text_size"
        tools:text="Мир дикого запада" />

</LinearLayout>